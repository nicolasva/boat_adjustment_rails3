!!!
%html
  %head
    %title Boat adjustment
    = stylesheet_link_tag("application", :media => "all")
    = javascript_include_tag("boat_adjustment_computer_backbonejs/application")
    = csrf_meta_tags
    - if protect_against_forgery?
      %meta{:content => u(cookies[Rails.application.config.session_options[:key]]), :name => "session-key-value"}
  %body.container-fluid
    - if current_user
      %section.header
        %ul.span6
          %li.span2
            = link_to t("panel.city_lists"), computer_cities_path
          %li.span2
            = link_to "New Context", "/#/computer/users/#{current_user.firstname}/contexts/new"
        %ul.span6
          %li.span2
            = link_to "Logout", destroy_user_session_path, :method => :delete
    %section.notice
      %section.container.container-fluid
        = yield
    %section.footer
