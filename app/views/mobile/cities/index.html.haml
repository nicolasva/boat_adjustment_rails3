%h1 Listing cities

%table
  %tr
    %th
      = "City name"
    %th
      = "See contexts"
    %th
      = "Edit City"
    %th
      = "Destroy City"

  - @cities.each do |city|
    %tr
      %td= city.name
      %td= link_to "See contexts", "/#/city/#{city.id}/users/#{current_user.firstname}/contexts"
      %td= link_to 'Edit', "/#/cities/#{city.id}/edit"
      %td= link_to 'Destroy', "/#/cities/#{city.id}", :method => :delete, :data => { :confirm => 'Are you sure?' }

